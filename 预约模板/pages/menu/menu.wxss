.cons{
  display: flex;
  justify-content: center
}
view{
  font-size: 30rpx
}
.left-scroll{
  width: 90px;
}
.left-scroll .item{
  padding: 30rpx 10rpx;
  text-align: center;
}
.left-scroll .active{
  background: #7bbc58;
  color: #fff
}
.right-scroll{
  background: #f3f3f3
}
.right-scroll .item{
  margin-top: 20rpx;
  padding:0 20rpx;
  border-radius: 20rpx;
}
.right-scroll .item .showPho .cri{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: -200rpx;
  background: #7bbc58;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx 0 20rpx 0;
  color: #fff
}
.right-scroll .item .showPho image{
  display: block;
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx 0 0 20rpx;
}
.right-scroll .item .showPho{
  width:200rpx;
  height:200rpx;
  border-radius: 20rpx 0 0 20rpx;
  overflow: hidden;
}
.right-scroll .item .showCon{
  width: 9.5rem;
  background: #fff;
  border-radius: 0 20rpx 20rpx 0
}
.right-scroll .item .showCon .title{
  margin-left: 20rpx;
  margin-top: 10rpx;
  font-weight: bold;
  color: #444
}
.right-scroll .item .showCon .sub_title{
  margin-left: 20rpx;
  color: #7bbc58
}
.right-scroll .item .showCon .price{
  margin-left: 20rpx;
  color: #ff5757;
  font-weight: bold;
  font-size: 32rpx
}
.right-scroll .item .showCon .shtop{
  height: 130rpx;
  overflow: hidden;
}
.right-scroll .item .showCon .con{
  height: 70rpx;
}
.right-scroll .item .showCon .con .num{
  margin-left: 20rpx;
}
.right-scroll .item .showCon .con .num .cri{
  background: #7bbc58;
  color: #fff;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  margin-left: 10rpx
}
.right-scroll .item .showCon .con .addbtn{
  width: 70rpx;
  height: 70rpx;
  background: #7bbc58;
  border-radius: 0 0 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff
}
.right-scroll .item .showCon .con .addbtn view{
  font-size: 40rpx
}
.right-scroll .item .showCon .con .rebtn{
  width: 70rpx;
  height: 70rpx;
  background: #d1d1d1;
  border-radius: 20rpx 0 0 0 ;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff
}
.right-scroll .item .showCon .con .rebtn view{
  font-size: 40rpx
}
