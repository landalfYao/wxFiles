}

.youtit view {
  margin-left: 20rpx;
}

.swiper {
  height: 550rpx;
}

.renq {
  display: flex;
  justify-content: space-between;
}

.renq .qew {
  width: 300rpx;
  height: 500rpx;
}

.renq .con {
  width: 350rpx;
}

.renq .con .tit {
  font-size: 32rpx;
  font-weight: bold;
}

.renq .con .pri {
  margin-top: 20rpx;
  font-size: 50rpx;
  color: #ff5b58;
}

.renq .con .pri text {
  font-size: 30rpx;
  text-decoration: line-through;
  color: #919191;
}

.renq .con .bar {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.renq .con .bar .it view {
  width: 60rpx;
  line-height: 60rpx;
  background: #312d2c;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.renq .con .text {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  background: #f1f1f1;
  padding: 20rpx;
  font-size: 30rpx;
}

.renq .con .btnbuy {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #fff;
  background: #f90;
  line-height: 70rpx;
  border-radius: 10rpx;
  text-align: center;
}

.poj .pho {
  width: 100%;
  height: 350rpx;
}

.poj .topsd {
  position: relative;
  top: -360rpx;
  right: 0rpx;
  line-height: 65rpx;
  width: 400rpx;
  color: #fff;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
}

.poj .tit {
  margin-top: -50rpx;
  display: flex;
  justify-content: space-between;
}

.poj .tit .pri {
  color: #ff5b58;
}

.poj .tit .pri text {
  color: #919191;
  text-decoration: line-through;
  font-size: 28rpx;
}

.poj .con {
  margin-top: 20rpx;
  font-size: 30rpx;
  padding: 20rpx;
  background: #f1f1f1;
