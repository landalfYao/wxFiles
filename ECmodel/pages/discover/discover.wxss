}

.scrollview {
  
  white-space: nowrap;
  display: flex;
  background: #f1f1f1;
}

.scrollview image {
  display: inline-block;
  width: 220rpx;
  height: 350rpx;
  margin-right: 20rpx;
}

.glist {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.glist .item {
  margin-top: 10rpx;
  width: 49%;
}

.glist .item .img {
  width: 100%;
  height: 350rpx;
}

.glist .item .img .line {
  background: rgba(0, 0, 0, 0.5);
  line-height: 70rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  top: 280rpx;
}

.glist .item .img .line .t1 {
  width: 33.33%;
  line-height: 70rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}

.glist .item .img .line .t1 image {
  margin-top: 15rpx;
  width: 40rpx;
  height: 40rpx;
}

.glist .item .img .line .t1 view {
  color: #fff;
  margin-left: 10rpx;
  font-size: 28rpx;
}

.glist .item .con {
  background: #fff;
  padding: 20rpx;
}

.glist .item .con .tit {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
}
.glist .item .con .pri{
  color: #ff5b58;
  font-size: 40rpx;
}
