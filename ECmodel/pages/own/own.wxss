.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  border:5px solid rgba(255, 255, 255, 0.3)
}
.nickname{
  color: #fff;
  line-height: 60rpx;
  padding-bottom: 50rpx;
}
.own-panel{
  margin: auto;
  height: 150rpx;
  background: #fff;
  border: 1px solid #f3f3f3;
  box-shadow: 0px 2px 2px #e1e1e1;
  border-radius: 5px;
  margin-top: -80rpx;
}
.own-panel .item{
  margin-top: 20rpx;
  height: 110rpx;
  float: left;
  width: 33%;
  text-align: center;
  border-right: 1px solid #e1e1e1
}
.own-panel .item image{
  margin-top: 15rpx;
  width: 42rpx;
  height: 42rpx;
}
.own-panel .item view{
  font-size: 28rpx;
}
.titleline{
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e1e1e1;
  font-size: 28rpx;
  background: #fff
}
.tong .item{
  float: left;
  width: 33.33%;
  text-align: center;
  padding-bottom: 30rpx;
}
.tong .item .num{
  color: #FF3030;
}
.tong .item .text{
  font-size: 28rpx;
}