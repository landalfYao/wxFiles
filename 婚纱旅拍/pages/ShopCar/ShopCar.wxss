.ShopCarList{
    width: 750rpx;
    min-height: 186rpx;
    background-color: #fff;
    overflow: auto;
    border-bottom: 1rpx solid #eee;
    margin-bottom: 20rpx;
}
.ShopImg{
    width: 155rpx;
    height: 155rpx;
}
.ChoiceImg{
    width: 42rpx;
    height: 42rpx;
    position: relative;
    left: -8rpx;
    top: -174rpx;
   
}
.Icon{
    padding: 15rpx 30rpx;
}
.MainBox{
    width: 720rpx;
    padding-left: 30rpx;
    overflow: auto;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
}
.imageBox{
    width: 165rpx;
}
.textBox{
    width: 500rpx;
    font-size: 26rpx;
}
.text{
    overflow: hidden;
    height: 80rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
   margin-bottom: 40rpx;
}
.Foot{
    background-color: #fff;
    height: 40rpx;
    text-align:center;
}
.Counter{
    float: right;
    width: 196rpx;
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    text-align: center;
    line-height: 60rpx;
    position: relative;
    top: -10rpx;
}
.Counter image{
    width: 60rpx;
    height: 60rpx;
}
/*end ShopCarList*/


.Settlement{
    width: 725rpx;
    height: 101rpx;
    background-color: #fff;
    line-height: 101rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    padding-left: 25rpx;
}
.ChoiceAll{
    font-size: 32rpx;
    font-weight: bold;
}
.ChoiceAll image{
    width: 42rpx;
    height: 42rpx;
    position: relative;
    top: 8rpx;
}
.price{
    font-size: 30rpx;
    padding-right: 30rpx;
}
.jieSuan{
    width: 200rpx;
