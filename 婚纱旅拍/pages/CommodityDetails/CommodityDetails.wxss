/* pages/CommodityDetails/CommodityDetails.wxss */
.scrollBox{
    width: 750rpx;
    height: 1250rpx;
}


.focusImg{
  width: 100%;
  height: 125px;
}
.swiper-container{
 position: relative;
}
.swiper-container swiper{
 height: 351rpx;
}
.swiper-container .swiper .img{
 width: 100%;
 height: 100%;
}
.swiper-container .dots{
 position: absolute;
 left: 0;
 right: 0;
 bottom: 30rpx;
 display: flex;
 justify-content: center;

}
.swiper-container .dots .dot{
 margin: 0 8rpx;
 width: 14rpx;
 height: 14rpx;
 background:#FFF;
 border-radius: 8rpx;
 transition: all .6s;
  margin-right: 15rpx;
}
.swiper-container .dots .dot.active{
 background:#ff7a92;
}
/*end swiper-container*/


.TextBox{
  background-color: #fff;
  padding: 40rpx 20rpx 40rpx;
  margin-bottom: 15rpx;
}
.Text{
  width: 710rpx;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
  font-size: 35rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.TextBoxFoot{
  font-size: 24rpx;
  color: #737373;
  padding: 25rpx 0;
}
.TextBoxFoot view{
  float: left;
  padding-right: 37rpx;
}
.TextBoxFoot image{
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 4rpx;
}
/*end TextBox*/


.CommodityDetails{
