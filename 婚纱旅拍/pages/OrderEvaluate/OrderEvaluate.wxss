/* pages/OrderEvaluate/OrderEvaluate.wxss */
.OrderEvaluate{
    background-color: #fff;
    width: 750rpx;
    height: 1250rpx;
}
.Top{
    height: 170rpx;
    padding-top: 15rpx;
    padding-left: 30rpx;
    line-height: 162rpx;
    border-bottom: 1rpx solid #d8d8d8;
    font-size: 28rpx;
}
.TopImg{
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    border: 1rpx solid #f8f4fd;
}
.TopImg image{
    width: 150rpx;
    height: 150rpx;
}
.Star{
    width: 300rpx;
    display: flex;
    justify-content: space-between;
    padding-top: 8rpx;
}
.Star image{
    width: 39rpx;
    height: 37rpx;
}
/*end Top*/


.Share{
    padding-left: 30rpx;
    line-height: 75rpx;
    font-size: 30rpx;
    color: #7c7c7c;
}
.ImageBox{
    height: 140rpx;
    padding-top: 10rpx;
}
.ImageBox image{
    margin-right: 20rpx;
}
/*end Share*/


.ServiceEvaluate{
    background-color: #ededed;
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #7c7c7c;
}
/*end ServiceEvaluate*/


.Btn{
    width: 675rpx;
    height: 80rpx;
    background-color: #ff7a92;
    font-size: 36rpx;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    margin-top: 175rpx;
    margin-left: 40rpx;
    border-radius: 10rpx;
}
/*end Btn*/


.Message{
    width: 269rpx;
    height: 81rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 81rpx;
    background-color: #000;
    opacity: 0.8;
    position: fixed;
    left: 240rpx;
    bottom: 480rpx;
    z-index: 10;
}
/*end Message*/


