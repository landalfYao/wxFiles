/* pages/MyOrder/MyOrder.wxss */
.nav{
    width: 650rpx;
    height: 82rpx;
    margin-bottom: 21rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #7c7c7c;
    line-height: 82rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 50rpx;
}
.nav view{
    height: 78rpx;
    padding: 0 6rpx;
}
.NavActive{
    color: #ff7a92;
    border-bottom: 4rpx solid #ff7a92;
}
/*end nav*/


.OrderList{
    width: 750rpx;
    margin-bottom: 20rpx;
}
.OrderListTop{
    height: 42rpx;
    background-color: #fff;
    padding: 20rpx 20rpx 20rpx;
}
.OrderListTop image{
    height: 42rpx;
    float: left;
}
.OrderListTop text{
    color: #ff7a92;
    line-height: 42rpx;
    font-size: 28rpx;
    float: right;
}
.OrderListTop view{
    font-size: 28rpx;
}
.OrderListMid{
    padding: 20rpx;
    height: 152rpx;
    font-size: 26rpx;
}

.OrderListFoot{
    height: 80rpx;
    background-color: #fff;
    padding-right: 20rpx;
}
.OrderListFoot text{
    float: right;
    line-height: 80rpx;
    font-size: 26rpx;
}

.payment{
    height: 72rpx;
    border-top: 1rpx solid #dbdbdb;
    padding-right: 20rpx;
    background-color: #fff;
    padding-top: 12rpx;
}
.payText{
    display: block;
    float: right;
    background-color:#ff7a92;
    width: 157rpx;
    height: 59rpx;
    border-radius: 10rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 59rpx;
    text-align: center;
}
.cancel{
    display: block;
    float: right;
    background-color:#fff;
    width: 155rpx;
    height: 57rpx;
    border-radius: 10rpx;
    color: #000;
    font-size: 28rpx;
    line-height: 59rpx;
    text-align: center;
    border: 1rpx solid #bfbfbf;
    margin-right: 22rpx;
}
/*end AllOrder*/


.NoOrder{
    width: 750rpx;
    height: 310rpx;
    position: fixed;
    left: 0;
    top: 326rpx;
    text-align: center;
}
.NoOrder image{
    width: 143rpx;
    height: 143rpx;
    margin-bottom: 75rpx;
}
/*end NoOrder*/