/* pages/Address/Address.wxss */


.AddressBox{
    width: 690rpx;
    background-color: #fff;
    padding: 30rpx 30rpx 4rpx;
    margin-bottom: 20rpx;
}
.AddressTop{
    font-size: 26rpx;
    border-bottom: 1rpx solid #e0e0e0;
    padding-top: 10rpx;
    color: #333333;
}
.AddressTop image{
    width: 34rpx;
    height: 24rpx;
    float: right;
    position: relative;
    top: -70rpx;
}
.AddressFoot{
    font-size: 28rpx;
    height: 68rpx;
    color: #333333;
    padding-top: 25rpx;
}
.AddressFoot image{
    margin-left: 16rpx;
    margin-right: 10rpx;
    position: relative;
    top: 4rpx;
}
/*end AddressBox*/

.AddressBtn{
    width: 723rpx;
    height: 84rpx;
    background-color: #ff7a92;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    line-height: 84rpx;
    border-radius: 10rpx;
    margin-left: 15rpx;
    margin-top: 20rpx;
}
.AddressBtn image{
    width:39rpx;
    height: 39rpx;
    position: relative;
    top: 8rpx;
}
/*end AddressBtn*/


.AddAddress{
    width: 750rpx;
    height: 100%;
}
.AddAddressBox{
    width: 655rpx;
    background-color: #fff;
    font-size: 28rpx;
    border-radius: 10rpx;
    margin-left: 47rpx;
    z-index: 11;
    position: fixed;
    top:50px;
    overflow: auto;
}
.AddressBj{
    width: 750rpx;
    height: 100%;
    background-color: #000;
    opacity: 0.5;
    z-index: 10;
    position: fixed;
    left: 0;
    top: 0;
}
.AddAddressTitle{
    text-align: center;
    height: 84rpx;
    line-height: 84rpx;
    border-bottom: 1rpx solid #e0e0e0;
}
.NamePhone{
    height: 91rpx;
    border-bottom: 1rpx solid #e0e0e0;
}
.name{
    height: 71rpx;
    width: 292rpx;
    float: left;
    border-right: 1rpx solid #e0e0e0;
    padding-left: 40rpx;
    padding-top: 20rpx;
}
.phone{
    height: 71rpx;
    width: 280rpx;
    float: left;
    padding-left: 40rpx;
    padding-top: 20rpx;
}
.Select{
    width: 655rpx;
    
    line-height: 87rpx;
    overflow: auto;
    text-align: center;
}
.Select view{
    border-bottom: 1rpx solid #e0e0e0; 
}
.JieDao{
    height: 69rpx;
    padding-top: 20rpx;
    padding-left: 35rpx;
    border-bottom: 1rpx solid #e0e0e0;
}
.SaveAddress{
    width: 375rpx;
    height: 73rpx;
    background-color: #ff7a92;
    border-radius: 10rpx;
    color: #fff;
    text-align: center;
    line-height: 73rpx;
    font-size: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    margin-left: 140rpx;
}
.CloseAddAddress{
    position: fixed;
    right: 30px;
    top: 60px;
    z-index: 50;
}
/*end .AddAddress*/