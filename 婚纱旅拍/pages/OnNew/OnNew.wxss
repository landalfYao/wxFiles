/* pages/OnNew/OnNew.wxss */

.Head{
    width: 750rpx;
    height: 224rpx;
    display: flex;
    justify-content: space-between;
}
.HeadLeft,.HeadRight{
    background-color: #fff;
    width: 373rpx;
    height: 184rpx;
    padding-top: 40rpx;
    text-align: center;
}
.HeadLeftTop,.HeadRightTop{
    font-size: 32rpx;
    color: #7bd2c9;
}
.HeadLeftTop image{
    width: 50rpx;
    height: 29rpx;
}
.HeadLeftMid{
    font-size: 24rpx;
    color: #919191;
    line-height: 40rpx;
}
.HeadLeftFoot{
    padding-left: 94rpx;
}
.HeadLeftFoot view{
    width: 53rpx;
    height: 53rpx;
    border-radius: 53rpx;
    background-color: #e8e8e8;
    float: left;
    border: 1rpx solid #fff;
    position: relative;
    overflow: hidden;
}
.HeadLeftFoot image{
    width:53rpx;
    height: 53rpx;
}
.HeadRightTop image{
    width: 35rpx;
    height: 29rpx;
    margin-right: 10rpx;
}
.HeadRightFoot{
    width: 158rpx;
    height: 49rpx;
    display: flex;
    justify-content: space-between;
    padding-left: 108rpx;
}
.HeadRightFoot view{
    width: 49rpx;
    height: 49rpx;
    background-color: #e8e8e8;
    overflow: hidden;
}
.HeadRightFoot image{
    width: 49rpx;
    height: 49rpx;
}
/*end Head*/


.Title{
    width: 750rpx;
    height: 107rpx;
    text-align: center;
    font-size: 20rpx;
    color: #919191;
    padding-top: 26rpx;
}
.Title image{
    width: 570rpx;
    height: 42rpx;
}
/*end Title*/

.NewListBox{
    width: 750rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.NewList{
    width: 373rpx;
    height: 538rpx;
    background-color: #fff;
    margin-bottom: 5rpx;
}
.NewList image{
    width: 373rpx;
    height: 373rpx;
}
.NewListText{
    font-size: 22rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    padding: 0 18rpx;    
}
.NewListFoot{
    padding: 0 18rpx;
    display: flex;
    justify-content: space-between;
    padding-top: 35rpx;
}
/*end NewList*/