/* pages/AppreciatePage/AppreciatePage.wxss */
.scrollBox{
    width: 750rpx;
    height: 1250rpx;
}


.Nav{
    width: 780rpx;
    height: 72rpx;
    padding-top: 16rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 57rpx;
    border-bottom:1rpx solid #e5e5e5;
    background-color: #fff;
}
.Nav view{
    width: 250rpx;
    height: 70rpx;
}
.Nav text{
    display: block;
    width: 249rpx;
    height: 57rpx;
}
.NavActive{
    color: #ff7a92;
    border-bottom: 5rpx solid #ff7a92;
    z-index: 10;
}
/*end Nav*/


.Appreciate{
    width: 750rpx;
}

.AppreciateTop{
    height: 125rpx;
    background-color: #fff;
    text-align: center;
    padding: 0 70rpx;
}
.Address{
    font-size: 30rpx;
    color: #7bd2c9;
    line-height: 70rpx;
    
}
.Time{
    font-size: 20rpx;
    color: #919191;
    
}
.SolidLeft{
    margin-top: 60rpx;
    width: 175rpx;
    height: 2rpx;
    background-image: -webkit-linear-gradient(right, rgba(0, 0, 0, 0.3) 0%, rgb(236,236,236) 100%);
    float: left;
}
.SolidRight{
    margin-top: 60rpx;
    width: 175rpx;
    height: 2rpx;
    background-image: -webkit-linear-gradient(left, rgba(0, 0, 0, 0.3) 0%, rgb(236,236,236) 100%);
    float: right;
}
.AppreciateList{
    padding-top: 20rpx;
    padding-bottom: 6rpx;
    border-bottom:1rpx solid #e9e9e9;
    background-color: #fff;
}
.AppreciateListBox{
    width: 730rpx;
    display: flex;
    text-align: center;
    padding: 0 10rpx;
    height: 186rpx;
    overflow: hidden;
}
.AppreciateListBox view{
    width: 365rpx;
    
}
.AppreciateListBox image{
    width: 345rpx;
    height: 186rpx;

}



.BackTop{
    width: 82rpx;
    height: 82rpx;
    background-color: #fff;
    opacity: 0.8;
    text-align: center;
    border-radius: 82rpx;
    font-size: 20rpx;
    position: fixed;
    bottom: 165rpx;
    right: 35rpx;
    z-index: 100;
}
/*end BackTop*/
.TextLeft{
    position: relative;
    top: -186rpx;
    padding-top: 20rpx;
    text-align: center;  
    color: #fff;  
    z-index: 20;
    font-family: '经典特宋简';
}

.AddressTextTop{
    font-size: 70rpx;
    line-height: 80rpx;
    font-weight: bold;
}
.AddressTextFoot{
    padding-left: 30rpx;
    padding-right: 20rpx;
    font-size: 31rpx; 
    font-weight: 400;
    line-height: 50rpx;
    overflow:hidden;
    text-align:justify;
    text-align-last:justify;
}






