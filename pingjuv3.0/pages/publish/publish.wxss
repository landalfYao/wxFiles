.head{
    background: #06c1ae;
    padding: 15rpx;
}
.head .icon{
    width: 30rpx;
    height: 40rpx;
    float: left;
}
.head .text{
    color: #fff;
    float: left;
    margin-top: 5rpx;
    margin-left: 10rpx;
}
.head .con{
    width: 40rpx;
    height: 40rpx;
    float: left;
    margin-top: 8rpx;
    margin-left: 10rpx;
}

.lpanel .item{
    padding: 14px;
    border-bottom: 1px solid #f2f2f2;
}
.lpanel .item .icon{
    width: 40rpx;
    height: 40rpx;
    float: left;
}
.lpanel .item .title{
    float: left;
    margin-top: 5rpx;
    margin-left: 20rpx;
}
.lpanel .item .value{
    float: right;
    color: #888888
}
.lpanel .item .pull{
     width: 15rpx;
    height: 20rpx;
    float: right;
    margin-left: 20rpx;
    margin-top: 10rpx;
}
.block{
    width: 130rpx;
    background: #c8c8c8;
    color: #fff;
    float: left;
    margin-left: 20rpx;
    border-radius: 5px;
    text-align: center;
    line-height: 60rpx;
}
.active{
    background: #06c1ae
}
.btn{
    padding: 10px;
}
.btn view{
    background: #06c1ae;
    line-height: 100rpx;
    color: #fff;
    text-align: center;
    border-radius: 5px;
}