.header{
    padding: 15px;
    border-bottom: 1px solid #f2f2f2
}
.header .head{
    width:100rpx;
    height: 100rpx;
    float: left;
}
.header .title{
    float: right;
    margin-top:30rpx;
}
.header .right{
    width: 20rpx;
    height: 25rpx;
    float: right;
    margin-top:40rpx;
    margin-left: 20rpx;
}
.lpanel .item{
    padding: 15px;
    border-bottom: 1px solid #f2f2f2;
}
.lpanel .item .icon{
    width: 50rpx;
    height: 50rpx;
    float: left;
}
.lpanel .item .title{
    float: left;
    margin-top: 5rpx;
}
.lpanel .item .value{
    text-align: right;
    float: right;
    color: #888888;
}
.lpanel .item .pull{
     width: 20rpx;
    height: 25rpx;
    float: right;
    margin-top:10rpx;
    margin-left: 20rpx;
}