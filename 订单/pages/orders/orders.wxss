page{
  background: #f3f3f3
}
view{
  font-family: '微软雅黑';
  font-size: 30rpx
}
text{
  font-family: '微软雅黑';
  font-size: 30rpx
}
.orders-navbar{
  background: #fff;
  width: 100%;
  position: fixed;
  top: 0
}
.orders-navbar .item{
  width: 20%;
  display: inline-block;
  text-align: center
}
.orders-navbar .item .contain{
  padding: 0 15rpx
}
.orders-navbar .item .contain .def{
  line-height: 100rpx
}
.orders-navbar .item .contain .act{
  line-height: 100rpx;
  color: #fe4070;
  border-bottom: 2px solid #fe4070
}
.order-bottombar{
  width: 100%;
  background: #fff;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-bottombar .left{
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.order-bottombar .right{
  display: flex;
  justify-content: flex-end;
  align-items: center
}
.paybtn{
  height: 100rpx;
  padding: 0 60rpx;
  color: #fff;
  background: #fe4070;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx
}
.quan{
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #aaa;
  border-radius: 40rpx
}
.order-content{
  margin-top: 20rpx;
  background: #fff;
}
.order-content .titlebar{
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between
}
.themeColor{
  color: #fe4070
}
.order-content .goodsbar{
  background: #f7f7f7;
  
}
.textbar{
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #e1e1e1
}
.text-right{
  text-align: right
}
.boisd{
  border-bottom: 1px solid #e1e1e1
}
.boisd:last-child{
  border-bottom: none
}
.goodsitem{
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.goodsUrl{
  width: 180rpx;
  height: 180rpx;
  background: #fe4070
}
.goodsImage{
  width: 180rpx;
  height: 180rpx;
}
.gostart{
  display: flex;
  justify-content: flex-start
}
.gcontent{
  margin-left: 30rpx;
  width: 480rpx;
}
.gcontent .tit{
  font-size: 33rpx;
}
.gcontent .txt{
  color: #aaa;
  margin-top: 15rpx
}
.gcontent .pri{
  margin-top: 15rpx;
  font-size: 34rpx;
  color: #fe4070
}
.gcontent .num{
  font-size: 34rpx;
  color: #000;
  float: right
}
.btngroup{
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
}
.orbtn{
  border-radius: 5px;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  text-align: center;
  margin-left: 20rpx
}
.orbtn-default{
  border: 1px solid #aaa;
  color: #aaa
}
.orbtn-theme{
  border: 1px solid #fe4070;
  color: #fe4070
}
.orbtn-theme-full{
  border: 1px solid #fe4070;
  color: #fff;
  background: #fe4070
}