.search-bg{
  background: #0099FF;
  padding: 20rpx 30rpx;
  padding-top: 0;
}
.search-panel{
  height: 80rpx;
  background: #ffffff;
  border-radius: 5rpx
}
.sitem{
  width: 33.33%;
}
.sitem image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.pitem{
  padding:30rpx 0rpx;
  border-radius: 5rpx
}
.pitem > .pimage-bg{
  width: 230rpx;
  height: 160rpx;
  background: #aaa;
  border-radius: 5rpx;
}
.pitem > .pimage-bg > image{
  width: 230rpx;
  height: 160rpx;
  border-radius: 5rpx;
}
.pitem >.context{
  width: 380rpx;
  margin-left: 40rpx
}
.pitem >.context >.title{
  font-size: 32rpx;
}
.pitem >.context .txt{
  font-size: 26rpx;
  color: #888888
}
.pitem >.context .pri{
  font-size: 34rpx;
  color: #FF3333;
  font-weight: bold
}