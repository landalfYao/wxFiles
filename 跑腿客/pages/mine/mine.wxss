page{
  background: #f3f3f3
}
.avatar{
  width:150rpx;
  height:150rpx;
  border-radius: 150rpx
}
.msgtit{
  border-radius: 10rpx;
}
.jditem{
  width: 33.33%;
  padding:30rpx 0;
  background: #fff;
  display: inline-block;
  text-align: center;
}
.jditem:first-child{
  border-radius: 10rpx 0 0 10rpx
}
.jditem:last-child{
  border-radius: 0 10rpx 10rpx 0
}
.jditem .pan{
  border-right: 1px solid #e1e1e1;
}
.jditem .pan:last-child{
  border-right: none
}
.numk{
  font-size: 40rpx;
  color: #888
}
.kefubtn{
  border: 0;
  font-size: 30rpx;
  color: #3399cc;
  background: no-repeat
}
.kefubtn::after{
   border: 0;
  content: none;
  background: no-repeat
}