<view class="overflow:hidden">
  <!--<image src="/images/login.png" style="width:{{innerWidth}}px;height:{{innerHeight}}px"></image>-->
  <view style="position:absolute;width:100%;text-align:center;font-size:60rpx;top:150rpx;color:#fff">WSCHOOL</view>
  <view style="position:absolute;top:350rpx;width:100%">
    <view style="width:90%;height:100rpx;border:1px solid #fff; border-radius:100rpx;margin:auto">
      <input bindinput="username" value="{{username}}" style="height:100rpx;width:100%;text-align:center;color:#fff" placeholder="USERNAME" placeholder-style="color:#fff;" />
    </view>
  </view>
  <view style="position:absolute;top:500rpx;width:100%">
    <view style="width:90%;height:100rpx;border:1px solid #fff; border-radius:100rpx;margin:auto">
      <input bindinput="password" type="password" value="{{password}}" style="height:100rpx;width:100%;text-align:center;color:#fff" placeholder="PASSWORD" placeholder-style="color:#fff;" />
    </view>
  </view>
  <view style="position:absolute;top:700rpx;width:100%">
    <view class="fgh" bindtap="navToPanel">
      LOGIN
    </view>
  </view>
</view>