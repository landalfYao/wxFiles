/* pages/search/search.wxss */
page{
    background-color: #f4f4f4;
    font-size: 28rpx;
}
.searchBox{
    position: relative;
    background-color: #fff;
    height: 90rpx;
}
.search{
    position: relative;
    display: flex;
    top: 15rpx;
    left: 17rpx;
    height: 57rpx;
    width: 603rpx;
    background-color: #f0eff5;
    border-radius: 6rpx;
    float: left
}
.search_img{
    position: relative;
    width: 30rpx;
    height: 27rpx;
    left: 30rpx;
    top: 17rpx;
}
.input{
    position: relative;
    left: 40rpx;
    font-size: 28rpx;
    font-family: HiraginoSansGB W3; 
    color: #aaa;
    top: 16rpx;
}
.button{
    position: relative;
    left: 15rpx;
    width: 100rpx;
    height: 56rpx;
    font-size: 28rpx;
    font-family: HiraginoSansGB W3;
    background-color: #06c1ae;
    color: #fff;
    text-align: center;
    border-radius: 12rpx;
    display:inline-block;
    margin-top:16rpx;
    margin-left:15rpx;
}

.button_text{
    position: relative;
    line-height: 56rpx;
    color: #fefefe;
    
}



.containItems{
    width: 100%;
    height:auto; 
    display:flex; 
    margin-top:24rpx;
    font-size:28rpx; 
    color:#999999; 
    font-family:HiraginoSansGB W3;
    flex-wrap:wrap;
}
.containeItem{
  margin:0 17rpx 20rpx 17rpx;
  background-color: #fff;
  height:50rpx; 
  width:342rpx;
  text-align:center; 
  border-radius:4rpx; 
}
.wxSearch{
  position: absolute;
  top: 90rpx;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(0, 0, 0, 0.2);
}
.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding: 5px 10px;
  border: 1px #eee solid;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.wxSearch-input{
  flex: 8; 
  background-color: #eee;
  padding: 5px 10px;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: cornflowerblue !important;
}
.wxSearchMindKeyItem{
  padding-left: 17rpx;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #555555;
  height: 88rpx;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem{
  flex: 0 0 20%;
  font-size: 14px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px;
  padding: 5px 10px;
  border-radius: 5px;
}
.green_hover{
    background-color: #06c1ae;
    color: #fff;
    border-bottom: 1px solid #06c1ae;
}
