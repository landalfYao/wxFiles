page{
  background: #f3f3f3
}
.paypanel{
  background: #06c1ae;
  display: flex;
  justify-content: center;
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  text-align: center
}
.paypanel .tit{
  font-size: 30rpx;
  color: #fff;
  margin-top: 37rpx;
}
.paypanel .txt{
  margin-top: 30rpx;
  font-size: 40rpx;
  color: #fff
}
.paypanel .con{
  font-size: 70rpx;
  color:#fff
}
.czbtn{
  margin-top: -50rpx;
}
.functpanel{
  background: #173e43;
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  text-align: center
}
.fhidden{
  display: none
}
.functpanel .tit{
  color: #fff;
  font-size: 35rpx
}
.fpbtn {
  margin: auto;
  margin-top: 60rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 5px;
  width: 150rpx;
}
.setpwd{
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0
}
.setpwd .input-panel{
  margin: auto;
  margin-top: 200rpx;
  width: 495rpx;
  background: #fff;
  padding: 30rpx;
  animation: showt 0.5s forwards
}
.setpwd .input-panel .tit{
  font-size: 30rpx;
}
.setpwd .input-panel .con{
  border:1px solid #c1c1c1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.setpwd .input-panel .con .item{
  
  width:80rpx;
  height: 80rpx;
  border: 1px solid #c1c1c1
}
.setpwd .input-panel .con .item .dot{
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
  background: #919191;
  margin-left: 26rpx;
  margin-top: 26rpx;
}
.number-panel {
  display: flex;
  justify-content: center;
  flex-flow: wrap;
  position: absolute;
  bottom: 0;
  width: 100%;
  animation: show 0.5s forwards;
}
.number-panel view{
  width: 33%;
  background: #fff;
  line-height: 130rpx;
  text-align: center;
  font-size: 45rpx;
  border-bottom: 1px #f1f1f1 solid;
  border-right: 1px #f1f1f1 solid
}
.number-panel view:active{
  background: #e1e1e1
}
@keyframes show{
  from {height: 0;overflow: hidden}
  to {height: 523rpx; over:hidden}
}
@keyframes showt{
  from {height: 0;overflow: hidden}
  to {height: 180rpx; over:hidden}
}
.citem{
  padding: 30rpx;
  background: #fff;
  border-radius: 10px 10px 0 0
}
.citem:last-child{
  border-radius:0 0 10px 10px
}
.plitem{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}
.plitem .tit{
  width: 400rpx;
  font-size: 32rpx
}
.plitem .con .time{
  font-size: 26rpx;
  color: #919191
}
.plitem .con .t1{
  color: #06c1ae;
  font-weight: bold;
}
.czbtn{
  color: #fff;
  padding-left: 30rpx;
  border-left: 1px solid #fff;
  font-size: 30rpx;
  float: right;
  margin-right: 30rpx;
}

.card{
  padding: 30rpx;
}
.card .item{
  background: #173e43;
  border-radius: 10px;
  height: 350rpx;
  box-shadow: 2px 2px 2px #c1c1c1
}
.card .item .first{
  padding: 20rpx;
}
.yui{
  transform: rotate(10deg)
}