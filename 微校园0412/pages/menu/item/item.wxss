/*图标点击*/

page {
  background: #fff;
}

.index_item {
  position: relative;
  display: inline-block;
  left: 40rpx;
  width: 658rpx;
}

.border2 {
  margin-left: 30rpx;
  margin-top: 40rpx;
  border-bottom: 1px solid #ddd;
}

.item_box_b {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: inline-block;
  /*background: -moz-linear-gradient(0,red,blue)*//*box-shadow: 0px 0px 12px #cbcbcb;*/
}

.item_box_r {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: inline-block;
  /*background: -moz-linear-gradient(0,red,blue)*/
  box-shadow: 0px 0px 12px #cbcbcb;
}

.item_box_select {
  box-shadow: 0 0 30rpx red;
}

.item_b {
  position: relative;
  display: inline-block;
  width: 25%;
  height: 137rpx;
  margin-top: 27rpx;
  font-size: 26rpx;
  text-align: center;
  font-family: HiraginoSansGB W3;
}

.item_r {
  position: relative;
  display: inline-block;
  width: 25%;
  height: 137rpx;
  margin-top: 27rpx;
  font-size: 26rpx;
  text-align: center;
  font-family: HiraginoSansGB W3;
  color: #06c1ae;
}

.item_img {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  background-image: -webkit-linear-gradient();
}

.swiper-tab-list {
  font-size: 40rpx;
  display: inline-block;
  width: 25%;
  color: #919191;
}

.on {
  color: #0864b9;
  border: 1px solid #0864b9;
  border-bottom-left-radius: 27px;
  border-bottom-right-radius: 27px;
  border-top-left-radius: 27px;
  border-top-right-radius: 27px;
  height: 90rpx;
  margin-top: 10rpx;
}

