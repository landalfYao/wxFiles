<view  style="background:#173e43;text-align:center;padding-top:100rpx;overflow-y:hidden">
  <image src="{{head}}" style="margin:auto;width:160rpx;height:160rpx;border-radius:160rpx;border:10rpx solid rgba(255,255,255,0.5)"></image>
  <view style="font-size:32rpx;color:#fff">{{name}}</view>

  <picker bindchange="bindPickerChange" value="{{index}}" range="{{slist}}">
    <view style="padding:60rpx;margin-top:30rpx">
      <view style="line-height:90rpx;border:#fff 2px solid;border-radius:30rpx;color:#fff;background:rgba(255,255,255,0.3);font-size:30rpx">{{value}}</view>
    </view>
  </picker> 
      <image src="/images/huanying.png" style="width:650rpx;height:500rpx;margin:auto" mode="aspectFill"></image>
</view>