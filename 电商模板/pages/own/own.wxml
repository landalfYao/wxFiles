<view class="padding-md">
  <view class="panel panel-between item-center radius-sm box-shadow">
    <view class='font-60'>{{uinfo.nickName}}</view>
    <image class='avatar' src='{{uinfo.avatarUrl}}'></image>
  </view>
</view>

<view class='padding-md'>
  <view class='radius-sm box-shadow'>
    <view class="panel bottom-line panel-between item-center" style="border-radius:20rpx 20rpx 0 0" bindtap='navToOrder'>
      <view class="panel-start item-center">
        <image class="icon-lg" src="/img/order.png" mode="aspectFill" />
        <view class="margin-left-md">我的订单</view>
      </view>
      <image src="/img/right.png" mode="aspectFill" class="icon-sm" />
    </view>
    <view class="panel bottom-line panel-between item-center" bindtap='addressManger'>
      <view class="panel-start item-center">
        <image class="icon-lg" src="/img/map.png" mode="aspectFill" />
        <view class="margin-left-md">我的地址</view>
      </view>
      <image src="/img/right.png" mode="aspectFill" class="icon-sm" />
    </view>
    
    <view class=" panel panel-between item-center " open-type='contact' style="border-radius:0 0 20rpx 20rpx;padding:0">
      <button class='but' bindtap='mkphone'>
      <view class="panel-start item-center">
        <image class="icon-lg" src="/img/atm.png" mode="aspectFill" />
        <view class="margin-left-md">联系客服</view>
      </view>
      <image src="/img/right.png" mode="aspectFill" class="icon-sm" />
      </button>
    </view>
   
  </view>
</view>

<view class='text-center margin-top-md'>
  <image src='/img/logo.png' class='icon-70'></image>
  <view class='font-default'>双沃科技提供服务</view>
</view> 