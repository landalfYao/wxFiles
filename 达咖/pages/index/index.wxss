page{
  background-color: #f3f3f3
}
.search-top{
  top:400rpx;
}
.panel-bg{
  width: 100%;
  height: 250rpx;
}
.panel-bg-opacity{
  width: 80%;
  line-height: 70rpx;
  text-align: center;
  color: #FFF;
  margin: auto;
  position: relative;
  top: -150rpx
}
.home-first .item{
  width:330rpx;
  margin-left: 30rpx;
}
.home-first .item:first-child{
  margin-left: 0
}
.home-first .item image{
  width: 280rpx;
  height: 280rpx;
  border-radius: 5px
}
.zt-height{
  height: 280rpx;
}
.home-first .zt-panel{
  width: 280rpx;
  height: 70rpx;
  border-radius: 0 0 5px 5px;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff; 
  position: relative;
  top:-70rpx;
}

.home-first .zt-panel .it{
  width: 49%;
  overflow: hidden;
  text-overflow: ellipsis;
