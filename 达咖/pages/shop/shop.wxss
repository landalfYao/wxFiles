.shop-top{
  background: -webkit-linear-gradient(top, #4d5d6c, #c6e3fd); 
  height: 240rpx;
  padding: 30rpx
}
.shop-img{
  width: 250rpx;
  height: 180rpx;
  border: 4px solid rgba(255, 255, 255, 0.3)
}
.cantact{
}
.cantact .item{
  width: 49%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 30rpx;
}
.cantact .act{
  color: #328dd4;
  border-bottom: 2px solid #328dd4
}
.shop-panel .litem{
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #e1e1e1
}
.shop-active{
  background: #fff
}
.second{
  background: #f7f7f7;
  color: #aaa;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}
.simg{
  width: 180rpx;
  height: 180rpx;
}
.deesd{
  padding: 20rpx;
}
.sgp{
  width: 320rpx;
}
.ofix{
  clear: both;
  width: 100%;
  height: 100rpx;
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}
.ofix .obtn{
  min-width: 150rpx;
  line-height: 100rpx;
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
}
.ofix .defbtncol{
  background: #ada8a8;
  color: #f3f3f3
}
.ofix .actbtncol{
  background: #1bcd77;
  color: #fff;
}
.ofix .left .scart{
  margin-top:-30rpx;
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 4px solid #6f6f6f;
  font-size: 30rpx;
}
.ofix .left .cri{
  width: 40rpx;
  height: 40rpx;
  background-color: #f26c63;
  border-radius: 40rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  position: relative;
  top: -120rpx;
  left: 110rpx;
  line-height: 40rpx;
}
.ofix .center .nonetxt{
  margin-left: 30rpx;
  color: #e1e1e1;
  line-height: 100rpx;
  font-size: 30rpx;
}
.ofix .center .acttxt{
  margin-left: 30rpx;
  margin-top: 10rpx
}
.ogoods{
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  background: rgba(0, 0, 0, 0.3);
  animation: showCart 0.5s forwards
}
.ogoods .panel-op{
   width: 100%;
   position: fixed;
   bottom: 100rpx
}
.ogoods .opan{
  padding: 20rpx 30rpx;
  background: #e1e1e1
}
.ogoods .opan .tit{
  padding-left: 10px;
  border-left: 4px solid #328dd4
}
@keyframes showCart {
  from {height: 0 ; overflow: hidden}
  to {height: 250rpx auto; overflow: hidden}
}
@keyframes goodsdetail {
  from {opacity: 0}
  to {opacity: 1}
}
.goodsdetail{
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  animation: goodsdetail 1s forwards
}
.gdpanel{
  margin: auto;
  margin-top: 100rpx;
  width: 650rpx;
  height: 950rpx;
  background: #fff;
  border-radius: 10px;
  overflow-y: scroll;
}
.gdpanel .gdpho{
  width: 650rpx;
  height: 650rpx;
  overflow: hidden;
  border-radius: 10px 10px 0 0;
}
.gdpanel .gdpho .img{
  width: 650rpx;
  height: 650rpx;
   border-radius: 10px 10px 0 0;
}
.gdpanel .gdpho .closeimg{
  position: fixed;
  top: 130rpx;
  left: 630rpx;
}
.goodsdetail .gitem{
  width: 650rpx;
  height: 850rpx;
  overflow-y: scroll;
}
.goodsdetail .gitem .content{
  padding: 30rpx;
  padding-bottom: 50rpx
}
.gdpanel .take{
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
.gdpanel .take .item{
  width: 49.5%;
  text-align: center;
  border-left: 1px solid #e1e1e1
}
.gdpanel .take .item:first-child{
  border-left: none
}
.gdpanel .content .item{
  margin-right: 20rpx;
  min-width: 120rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 5px;
  margin-top: 20rpx;
}
.gdpanel .content .itemdef{
  border: 1px solid #aaa;
}
.gdpanel .content .itemact{
  border: 1px solid #328dd4;
  background: #328dd4;
  color: #fff
}
@keyframes showrat{
  from {transform: rotate(0)}
  to {transform: rotate(180deg)}
}
@keyframes closerat{
  from {transform: rotate(180deg)}
  to {transform: rotate(0)}
}
.showrat{
  animation: showrat 0.5s forwards
}
.closerat{
  animation: closerat 0.5s forwards
}
@keyframes showtheme{
  from {height: 0; overflow: hidden}
  to {height: 320rpx ; overflow: hidden}
}

@keyframes closetheme{
  from {height: 320rpx; overflow: hidden }
  to {height: 0; overflow: hidden}
}
.closetheme{
  animation: closetheme 0.5s forwards
}
.settheme{
  height: 320rpx;
  animation: showtheme 0.5s forwards
}
.closetheme .item{
  padding:20rpx 30rpx;
  color: #fff;
  font-size: 30rpx
}
.settheme .item{
  padding:20rpx 30rpx;
  color: #fff;
  font-size: 30rpx
}
.searchsd input{
  width: 520rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  background: #f3f3f3;
  border-radius: 5px
}
.searchsd .searchBtn{
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  font-size: 30rpx;
}

.gpanel{
  border-radius: 10rpx;
  box-shadow: 2px 2px 2px #c1c1c1;
}
.xpanel{
  border-radius: 10rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.xpanel .content{
  margin-left: 20rpx;
  width: 400rpx;
}