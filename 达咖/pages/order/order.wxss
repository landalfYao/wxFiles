page{
  background: #f3f3f3
}
.order-bar{
  width:100%;
  background: #4d5d6c;
  position: fixed;
  top: 0
}
.order-bar .item{
  width: 33.33%;
  text-align: center;
}
.order-bar .item view{
  line-height: 90rpx;
  font-size: 30rpx;
  width: 120rpx;
  margin: auto;
}
.bar-default{
  color: #afc5da;
}
.bar-active{
  color: #fff;
  border-bottom: 2px solid #afc5da;
  animation: barActive 1s forwards
}
@keyframes barActive{
  from {color: #afc5da;border-bottom:  2px solid #4d5d6c;}
  to {color: #fff;border-bottom: 2px solid #afc5da;}
}
.order-panel{
  padding: 30rpx 30rpx 0 30rpx;
  
}
.order-panel:last-child{
  margin-bottom: 30rpx
}
.order-panel .content{
  border-radius: 10rpx;
  background: #fff;
  box-shadow: 2px 2px 2px #c1c1c1
}
.order-panel .content .top{
  border-radius: 10rpx 10rpx 0 0;
  height: 50px;
  padding-left: 20rpx;
  padding-right: 20rpx
}
.order-panel .content .top .img{
  width: 75rpx;
  height: 60rpx;
  border: 1px solid #fff;
  border-radius: 5rpx;
  margin-top:20rpx
}
.panel-goods{
  padding: 20rpx;
  
}
.pgitem{
  padding: 20rpx;
  background: #f3f3f3;
  border-bottom: 1px solid #e1e1e1;
}
.pgitem:last-child{
  border-bottom: none
}
.pgitem .gimg{
  width: 100rpx;
  height: 100rpx
}
.order-panel .bottom{
  padding: 20rpx 
}
.order-panel .bottom .btn{
  color: #fff;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  height: 40rpx
}
.order-panel .bottom .btn:last-child{
  margin-right: 0rpx;
}