page{
  background: #f3f3f3;
}
.address{
  padding: 30rpx;
  background: #fff;
}
.address .addressd{
  width: 550rpx
}
.linesds{
  display: block;
  width: 100%;
  height: 10rpx
}
.gitem{
  background: #f3f3f3;
  padding: 20rpx;
  border-bottom: 1px solid #e1e1e1;
  display: flex;
  justify-content: space-between;
}
.gitem:last-child{
  border-bottom: none;
}
.gitem .gimg{
  width: 130rpx;
  height: 130rpx;
  border-radius: 5rpx; 
}
.gitem .gtxt{
  width: 300rpx;
}
.txtiem{
  line-height: 50rpx;
}
.cantact{
  display: flex;
  justify-content: center;
}
.cantact button{
  margin-top: 20rpx;
  width: 45%;
  margin-bottom: 20rpx;
}
.cantact .item{
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center
}
.texta{
  border-radius: 5px;
  background: #f3f3f3;
  display: block;
  height: 150rpx;
  padding: 20rpx;
  width: 90%;
  margin: auto;
  font-size: 30rpx
}
.payforfix{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
}
.paybtn{
  width: 50%;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
.paybtn:active{
  background: #4aa8e3
}