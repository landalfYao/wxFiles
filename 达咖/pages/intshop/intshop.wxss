page{
  background: #f3f3f3
}
.order-bar{
  width:100%;
  background: #4d5d6c;
  position: fixed;
  top: 0
}
.order-bar .item{
  width: 50%;
  text-align: center;
}
.order-bar .item view{
  line-height: 90rpx;
  font-size: 30rpx;
  width: 120rpx;
  margin: auto;
}
.bar-default{
  color: #afc5da;
}
.bar-active{
  color: #fff;
  border-bottom: 2px solid #afc5da;
  animation: barActive 1s forwards
}
@keyframes barActive{
  from {color: #afc5da;border-bottom:  2px solid #4d5d6c;}
  to {color: #fff;border-bottom: 2px solid #afc5da;}
}